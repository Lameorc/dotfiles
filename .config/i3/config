# setting primary monitor
# builtin monitor as primary
bindsym $mod+Shift+F1 "exec xrandr --output eDP-1 --primary"
# HDMI
bindsym $mod+Shift+F2 "exec xrandr --output HDMI-1 --primary"

# moving workspaces between monitors
bindsym $mod+F1 move workspace to output left
bindsym $mod+F2 move workspace to output down
bindsym $mod+F3 move workspace to output up
bindsym $mod+F4 move workspace to output right

# reload xrandr setup using autorandr
bindsym $mod+shift+F12 exec "autorandr -c && nitrogen --restore"

# show known autorandr configs and apply selection
bindsym $mod+shift+F11 exec --no-startup-id "bash ~/.config/i3/autorandr_menu.sh && nitrogen --restore"

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # same but in smaller steps
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Ctrl+h resize shrink width 1 px or 1 ppt
        bindsym Ctrl+k resize grow height 1 px or 1 ppt
        bindsym Ctrl+j resize shrink height 1 px or 1 ppt
        bindsym Ctrl+l resize grow width 1 px or 1 ppt

        # same bindings, but for the arrow keys
        bindsym Ctrl+Left resize shrink width 1 px or 1 ppt
        bindsym Ctrl+Down resize grow height 1 px or 1 ppt
        bindsym Ctrl+Up resize shrink height 1 px or 1 ppt
        bindsym Ctrl+Right resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape or q
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym q mode "default"
}

bindsym $mod+r mode "resize"

